{
    "version": 2,
    "builds": [
        {
            "src": "Gemfile",
            "use": "@vercel/ruby",
            "config": {
                "installCommand": "bundle install",
                "buildCommand": "bundle exec jekyll build"
            }
        }
    ],
    "routes": [
        {
            "src": "/zsh_history",
            "dest": "/zsh_history.html"
        },
        {
            "src": "/posts/:slug",
            "dest": "/:slug/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "/_site/$1"
        }
    ]
}